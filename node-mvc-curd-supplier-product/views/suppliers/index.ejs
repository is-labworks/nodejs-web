<!-- filepath: views/suppliers/index.ejs -->
<%- include('../partials/header') %>

<h1>Suppliers</h1>
<a class="btn btn-primary mb-3" href="/suppliers/new">Add Supplier</a>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th><th>Address</th><th>Phone</th><th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% suppliers.forEach(supplier => { %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.address %></td>
        <td><%= supplier.phone %></td>
        <td>
          <a href="/suppliers/<%= supplier._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
          <form method="POST" action="/suppliers/<%= supplier._id %>/delete" style="display:inline;">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>